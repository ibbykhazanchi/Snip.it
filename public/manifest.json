{
  "name": "Snip.it",
  "description": "Snip some text & Save it to Notion",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": [
    "tabs",
    "identity",
    "activeTab",
    "storage"
  ],
  "host_permissions":[
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["blankUser.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "./static/js/content.js",
        "./static/js/@webcomponents/custom-elements/custom-elements.min.js",
        "./static/js/highlighter.js"
      ],
      "all_frames": false,
      "run_at": "document_end"
    }
  ]
}
